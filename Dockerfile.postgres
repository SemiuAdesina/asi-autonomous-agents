# Dockerfile for PostgreSQL Database Service
FROM postgres:15-alpine

# Set environment variables
ENV POSTGRES_DB=asi_agents
ENV POSTGRES_USER=asi_user
ENV POSTGRES_PASSWORD=changeme

# Create a directory for initialization scripts
RUN mkdir -p /docker-entrypoint-initdb.d

# Add initialization script for database setup
COPY init-db.sql /docker-entrypoint-initdb.d/

# Set proper permissions
RUN chmod 755 /docker-entrypoint-initdb.d/init-db.sql

# Expose PostgreSQL port
EXPOSE 5432

# Add health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD pg_isready -U asi_user -d asi_agents || exit 1

# Start PostgreSQL
CMD ["postgres"]
